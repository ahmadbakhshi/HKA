<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.example.ahmad.hka_1.add1"
    android:background="#000000"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="12">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/coloro1"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/txtname"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/plus"
                android:textSize="25dp"
                android:textColor="@color/coloro1"
                android:layout_centerInParent="true"
                />

            <Spinner
                android:layout_width="100dp"
                android:id="@+id/spinner"
                android:gravity="center"
                android:background="@drawable/shape6"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dropdown">
            </Spinner>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نام"
            android:id="@+id/t1"
            android:background="#000000"
            android:textColor="@color/coloro1"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:hint="نام"
            android:textColorHint="#4f4f4f"
            android:background="@drawable/shape1"
            android:textAlignment="center"
            android:gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="شماره IP"
            android:background="#000000"
            android:id="@+id/t2"
            android:textColor="@color/coloro1"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText33"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="20dp"
            android:hint="شماره IP"
            android:textColorHint="#4f4f4f"
            android:textColor="#000000"
            android:background="@drawable/shape1"
            android:textAlignment="center"
            android:gravity="center"
            android:numeric="integer" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ذخیره"
                android:id="@+id/button"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/shape2"
                android:layout_marginRight="10px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="بازگشت"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:textColor="#000000"
                android:background="@drawable/shape2"
                android:layout_marginLeft="10px" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
